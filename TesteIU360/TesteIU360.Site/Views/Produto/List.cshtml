@model TesteIU360.Site.ViewModel.ProdutoViewlModel
@{
    ViewBag.Title = "Produtos Cadastrados";
}

<div class="row wrapper border-bottom page-heading">
    <div class="col-sm-4">
        <h2>Produtos</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Produtos<small></small> </h5>
            </div>
            <div class="ibox-content">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="html5buttons">
                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable">
                        <thead>
                            <tr>
                                <th class="text-left">Id</th>
                                <th class="text-left">Nome</th>
                                <th class="text-left">Preço</th>                                
                                <th class="text-center">Status</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (@Model.produtos != null)
                            {
                                foreach (var item in @Model.produtos)
                                {
                                    <tr>
                                        <td class="text-left">@item.Id</td>
                                        <td class="text-left">@item.Nome</td>
                                        <td class="text-left">@item.Preco</td>                                                                               

                                        <td class="text-center">@(item.Status == true ? "Ativo" : "Inativo")</td>
                                        <td class="text-center">@Html.ActionLink("Editar", "Edit", "Produto", new { ProdutoId = item.Id }, new { @class = "btn btn-primary btn-xs" })</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <td class="text-center">@Html.ActionLink("Novo Produto", "Form", "Produto", new { @class = "btn btn-primary btn-xs" })</td>
                </div>
            </div>
        </div>
    </div>
</div>

